@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<h4>Associate your @Model.ProviderDisplayName account.</h4>
<hr />

<p class="text-info">
    You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
    Please enter additional employee information below and click the Register button to finish
    logging in.
</p>

<div class="row">
    <div class="col-md-6">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" readonly />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            
            <hr />
            <h4>Employee Information</h4>

            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" aria-required="true" placeholder="John Doe" />
                <label asp-for="Input.Name" class="form-label">Full Name</label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.StartDate" class="form-control" aria-required="true" type="date" />
                <label asp-for="Input.StartDate" class="form-label">Start Date</label>
                <span asp-validation-for="Input.StartDate" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <select asp-for="Input.EmployeeRoleId" asp-items="Model.AvailableRoles" class="form-select">
                    <option value="">-- Select Role --</option>
                </select>
                <label asp-for="Input.EmployeeRoleId" class="form-label">Role</label>
                <span asp-validation-for="Input.EmployeeRoleId" class="text-danger"></span>
            </div>
            
            <button type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-6">
        <section>
            <h3>Employee Registration</h3>
            <hr />
            <p>
                Registering as an employee will allow you to:
            </p>
            <ul>
                <li>Process customer orders</li>
                <li>Manage inventory</li>
                <li>View reports based on your role</li>
            </ul>
            <p>
                Select your role carefully as it determines your access level in the system.
            </p>
        </section>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}