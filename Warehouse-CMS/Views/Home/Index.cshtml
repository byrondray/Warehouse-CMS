@{
    ViewData["Title"] = "Warehouse Manager";
}

<div class="container mt-4">
    <div class="row align-items-center mb-5">
        <div class="col-md-6">
            <h1 class="display-4 fw-bold">Warehouse Management System</h1>
            <p class="lead text-muted">
                Efficiently manage your inventory, track products, and handle orders all in one place.
            </p>
            <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                <a asp-controller="Product" asp-action="Index" class="btn btn-primary btn-lg px-4">
                    View Products
                </a>
                <a asp-controller="Order" asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                    Manage Orders
                </a>
            </div>
        </div>
    </div>

    @await Component.InvokeAsync("DashboardStats")

    <div class="row mb-5">
        <div class="col-12">
            <h2 class="mb-4">Quick Actions</h2>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-plus-circle text-primary"></i> Add New Product
                    </h5>
                    <p class="card-text">Create a new product entry in your inventory.</p>
                    <a asp-controller="Product" asp-action="Create" class="btn btn-primary">Add Product</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-clipboard-check text-success"></i> Create Order
                    </h5>
                    <p class="card-text">Process a new customer order.</p>
                    <a asp-controller="Order" asp-action="Create" class="btn btn-success">New Order</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-search text-info"></i> Check Stock
                    </h5>
                    <p class="card-text">View and manage current inventory levels.</p>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-info text-white">Check Stock</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            @await Html.PartialAsync("_LowStockAlert", ViewBag.LowStockProducts as List<Warehouse_CMS.Models.Product>)
        </div>
    </div>
</div>