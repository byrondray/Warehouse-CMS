@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Oops! Something went wrong</h2>
                </div>
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-exclamation-circle text-danger" style="font-size: 4rem;"></i>
                    </div>
                    <h3 class="mb-3">We encountered an unexpected error</h3>
                    <p class="mb-4">Our team has been notified and we're working on fixing the issue.</p>

                    @if (Model.ShowRequestId)
                    {
                        <div class="alert alert-secondary mt-3">
                            <small><strong>Request ID:</strong> <code>@Model.RequestId</code></small>
                        </div>
                    }

                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg mt-3">
                        <i class="fas fa-home me-2"></i>Return to Home Page
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>