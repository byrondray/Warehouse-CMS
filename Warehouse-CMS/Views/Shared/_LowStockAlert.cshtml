@model List<Warehouse_CMS.Models.Product>

@if (Model != null && Model.Count > 0)
{
        <div class="card border-warning">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">
                    <i class="bi bi-exclamation-triangle"></i> Low Stock Alert
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Current Stock</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                    <tr>
                                        <td>@product.Name</td>
                                        <td>@product.StockQuantity</td>
                                        <td>
                                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id"
                                                class="btn btn-warning btn-sm">Update Stock</a>
                                        </td>
                                    </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
}