@model Warehouse_CMS.Models.Order

<h2>Order Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Order ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.OrderDate.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@(Model.Customer?.Name ?? "N/A")</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@(Model.OrderStatus?.Status ?? "N/A")</dd>

        <dt class="col-sm-2">Total Amount</dt>
        <dd class="col-sm-10">@Model.TotalAmount.ToString("C")</dd>
    </dl>

    <h4>Order Items</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@(item.Product?.Name ?? $"Product ID: {item.ProductId}")</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice.ToString("C")</td>
                    <td>@((item.Quantity * item.UnitPrice).ToString("C"))</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>